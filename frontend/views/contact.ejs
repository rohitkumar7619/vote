              <p>info@company.com</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <%- include('partials/footer') %>
    
    <script>
      document.querySelectorAll(".bio-toggle").forEach((button) => {
        button.addEventListener("click", () => {
          const memberCard = button.closest('.team-member');
          const bio = memberCard.querySelector('.member-bio');
          
        
          bio.classList.toggle('active');
          button.classList.toggle('active');
          
          if (bio.classList.contains('active')) {
            button.innerHTML = 'Hide Bio <i class="fas fa-chevron-up"></i>';
          } else {
            button.innerHTML = 'Read Bio <i class="fas fa-chevron-down"></i>';
          }
        });
      });
    </script>
  </body>
</html>